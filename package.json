{
  "name": "mcp-lsp-bridge",
  "version": "0.1.1",
  "description": "MCP server bridging Claude Code to TypeScript Language Server (tsserver)",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-lsp-bridge": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "lsp",
    "typescript",
    "language-server",
    "claude-code"
  ],
  "author": "Daniel Neveux <d.neveux@warfog.gg>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dagatsoin/mcp-lsp-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/dagatsoin/mcp-lsp-bridge/issues"
  },
  "homepage": "https://github.com/dagatsoin/mcp-lsp-bridge#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
